#include <tunables/global>

profile dockerfile_info_profile flags=(attach_disconnected,mediate_deleted) {
	capability dac_override,
	capability setgid,  #Needed to switch between users (chown or USER commands)
	/hello r,
	owner /Heys rwix,
	owner /hello rwix,
	/Heys r,
	file,  #Allows access to containers filesystem
	/var/lib/docker/* r, #Access to layers of filesystem
	signal (receive) set=(kill) peer=unconfined,
	capability setuid,  #Needed to switch between users (chown or USER commands)
	network inet dgram,
	signal (receive) set=(exists) peer=unconfined,
	deny ptrace (readby, tracedby), #Confront container breakout attacks
}
