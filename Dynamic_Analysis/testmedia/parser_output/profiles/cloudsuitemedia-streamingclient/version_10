#include <tunables/global>

profile cloudsuitemedia-streamingclient_profile flags=(audit,attach_disconnected,mediate_deleted) {
	/etc/ld.so.cache r,
	network inet dgram,
	/output/* rw,
	/lib/x86_64-linux-gnu/libtinfo.so.5.9 r,
	/usr/bin/bc r,
	deny umount /output, #Disallow anybody that wants to break this mountpoint
	mount /output -> /output, #Bind host volume to docker container volume
	deny ptrace (readby, tracedby), #Confront container breakout attacks
	network inet stream,
	/lib/x86_64-linux-gnu/libdl-2.19.so r,
	file,  #This rule is needed so that I can work with files (create files/directories, copy, etc)
	/bin/grep ix,
	/root/run/process_logs.sh ix,
	/root/run/ r,
	/lib/x86_64-linux-gnu/libpcre.so.3.13.1 r,
	/usr/bin/dirname r,
	deny remount /output, #Disallow anybody that wants to remount this mountpoint
	/var/lib/docker/* r, #Access to layers of filesystem
}
