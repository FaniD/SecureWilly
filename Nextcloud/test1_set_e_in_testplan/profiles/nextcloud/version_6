#include <tunables/global>

profile nextcloud_profile flags=(audit,attach_disconnected,mediate_deleted) {
	capability dac_override,
	deny ptrace (readby, tracedby),
	network inet6 dgram,
	signal (send) set=(hup) peer=nextcloud_profile,
	/var/lib/docker/* r,
	capability chown,
	network inet stream,
	file,  #This rule is needed so that I can work with files (create files/directories, copy, etc)
	network inet6 stream,
	signal (receive) set=(kill) peer=unconfined,
	capability fowner,
	capability net_bind_service,
	signal (receive) set=(exists) peer=unconfined,
	signal (receive) set=(hup) peer=nextcloud_profile,
}
