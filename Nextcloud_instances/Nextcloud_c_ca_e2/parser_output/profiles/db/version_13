#include <tunables/global>

profile db_profile flags=(audit,attach_disconnected,mediate_deleted) {
	/var/lib/mysql/* rw,
	signal (receive) set=(kill) peer=unconfined,
	/lib/x86_64-linux-gnu/librt-2.27.so r,
	/usr/share/zoneinfo/Asia/Tbilisi r,
	file,  #Allows access to containers filesystem
	/usr/bin/mysql r,
	network inet6 dgram,
	signal (receive) set=(usr1) peer=db_profile,
	/etc/ld.so.cache r,
	/usr/bin/gawk r,
	/usr/share/zoneinfo/ROC r,
	/usr/share/zoneinfo/America/Atikokan r,
	/run/mysqld/mysqld.pid w,
	signal (send) set=(usr1) peer=db_profile,
	/var/lib/docker/* r, #Access to layers of filesystem
	network inet6 stream,
	/dev/urandom r,
	capability setgid,
	capability dac_override,
	/lib/x86_64-linux-gnu/libtinfo.so.5.9 r,
	/ r,
	/usr/share/zoneinfo/Iceland r,
	mount /var/lib/docker/volumes/nextcloud_db_/_data -> /var/lib/mysql, #Bind host volume to docker container volume
	/usr/share/zoneinfo/America/Bahia r,
	network inet dgram,
	capability setuid,
	deny ptrace (readby, tracedby), #Confront container breakout attacks
	/usr/share/zoneinfo/Atlantic/South_Georgia r,
	signal (receive) set=(term) peer=db_profile,
	/usr/share/zoneinfo/America/Adak r,
	/usr/share/zoneinfo/Asia/Tashkent r,
	/usr/share/zoneinfo/Africa/Abidjan r,
	deny remount /var/lib/mysql, #Disallow anybody that wants to remount this mountpoint
	deny umount /var/lib/mysql, #Disallow anybody that wants to break this mountpoint
	signal (send) set=(term) peer=db_profile,
	/lib/x86_64-linux-gnu/libc-2.27.so r,
}
