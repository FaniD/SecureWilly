#include <tunables/global>

profile nextcloud_profile flags=(audit,attach_disconnected,mediate_deleted) {
	network inet6 dgram,
	/usr/src/nextcloud/apps/files_pdfviewer/vendor/pdfjs/web/cmaps/Adobe-Japan1-0.bcmap r,
	/usr/src/nextcloud/apps/user_ldap/l10n/ml_IN.js r,
	capability dac_override,
	capability fsetid,
	capability chown,
	/usr/src/nextcloud/apps/user_ldap/l10n/nqo.json r,
	file,  #Allows access to containers filesystem
	mount /var/lib/docker/volumes/nextcloud_nextcloud_/_data -> /var/www/html, #Bind host volume to docker container volume
	/usr/src/nextcloud/apps/user_ldap/l10n/tzm.js r,
	/usr/lib/x86_64-linux-gnu/libargon2.so.1 r,
	signal (receive) set=(exists) peer=unconfined,
	/etc/ld.so.cache r,
	/usr/src/nextcloud/apps/firstrunwizard/l10n/es_NI.js r,
	mount /home/ubuntu/SecureWilly/Nextcloud/data -> /var/www/html/data, #Bind host volume to docker container volume
	/usr/src/nextcloud/apps/logreader/l10n/es_UY.json r,
	/usr/src/nextcloud/apps/updatenotification/l10n/fr.js r,
	/usr/src/nextcloud/core/doc/admin/_images/updater-cli-4-failed-step.png r,
	network inet stream,
	/var/www/html/* rw,
	/var/lib/docker/* r, #Access to layers of filesystem
	network inet6 stream,
	capability fowner,
	capability setgid,
	/usr/src/nextcloud/apps/user_ldap/l10n/ka_GE.js r,
	/usr/src/nextcloud/apps/password_policy/lists/list-6.php r,
	signal (receive) set=(usr2) peer=nextcloud_profile,
	/usr/src/nextcloud/apps/password_policy/lists/list-7.php r,
	deny umount /var/www/html, #Disallow anybody that wants to break this mountpoint
	signal (receive) set=(kill) peer=unconfined,
	/var/www/html/data/* rw,
	/usr/src/nextcloud/apps/comments/js/templates/comment.handlebars r,
	deny remount /var/www/html/data, #Disallow anybody that wants to remount this mountpoint
	network inet dgram,
	capability setuid,
	deny remount /var/www/html, #Disallow anybody that wants to remount this mountpoint
	deny ptrace (readby, tracedby), #Confront container breakout attacks
	/usr/src/nextcloud/apps/logreader/l10n/es_UY.js r,
	/usr/src/nextcloud/apps/logreader/l10n/et_EE.js r,
	/lib/x86_64-linux-gnu/libcrypt-2.24.so r,
	signal (send) set=(usr2) peer=nextcloud_profile,
	/usr/src/nextcloud/apps/user_ldap/l10n/ku_IQ.js r,
	deny umount /var/www/html/data, #Disallow anybody that wants to break this mountpoint
	capability net_bind_service,  #This capability is needed to bind a socket to Internet domain privileged ports
}
