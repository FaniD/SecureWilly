#include <tunables/global>

profile nextcloud_profile flags=(audit,attach_disconnected,mediate_deleted) {
	network inet6 dgram,
	capability fsetid,
	/var/lib/docker/* r,
	capability chown,
	signal (receive) set=(exists) peer=unconfined,
	signal (receive) set=(hup) peer=nextcloud_profile,
	/etc/ld.so.cache r,
	/usr/src/nextcloud/core/vendor/es6-shim/LICENSE r,
	network inet stream,
	network inet6 stream,
	capability fowner,
	capability setgid,
	/lib/x86_64-linux-gnu/libc-2.24.so r,
	signal (receive) set=(usr2) peer=nextcloud_profile,
	capability dac_override,
	signal (send) set=(usr2) peer=nextcloud_profile,
	file,  #This rule is needed so that I can work with files (create files/directories, copy, etc)
	network inet dgram,
	capability setuid,
	capability net_bind_service,
	signal (send) set=(hup) peer=nextcloud_profile,
	/var/www/html/core/Migrations/Version14000Date20180710092004.php r,
	/lib/x86_64-linux-gnu/libcrypt-2.24.so r,
	deny ptrace (readby, tracedby),
	signal (receive) set=(kill) peer=unconfined,
	/usr/src/nextcloud/core/vendor/es6-shim/.bower.json r,
	/usr/src/nextcloud/core/vendor/es6-shim/es6-shim.min.js r,
}
