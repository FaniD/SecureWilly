#include <tunables/global>

profile new {
	chmod 777 hello,
	capability chown,
	chown hello to owner=root group=users,

	capability audit_control,
	capability audit_write,
	capability chown,
	capability dac_override,
	capability dac_read_search,
	capability fowner,
	capability fsetid,
	capability kill,
	capability ipc_lock,
	capability ipc_owner,
	capability lease,
	capability linux_immutable,
	capability mac_admin,
	capability mac_override,
	capability mknod,
	capability net_admin,
	capability net_bind_service,
	capability net_broadcast,
	capability net_raw,
	capability setgid,
	capability setpcap,
	capability setuid,
	capability sys_admin,
	capability sys_boot,
	capability sys_chroot,
	capability sys_module,
	capability sys_nice,
	capability sys_pacct,
	capability sys_ptrace,
	capability sys_rawio,
	capability sys_resource,
	capability sys_time,
	capability sys_tty_config,
	capability setfcap,

	deny capability net_admin,
	deny capability sys_admin,

	capability net_bind_service,
	network bind 8000 to 8000,
	network bind 9090 to 8080,
	network bind 49100 to 22,

	mount /opt/data -> /var/lib/mysql,
	mount . -> /code,
	mount ./static -> /var/www/html,
	mount ~/configs -> /etc/configs/,
	mount datavolume -> /var/lib/mysql,


}
