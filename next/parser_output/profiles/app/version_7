#include <tunables/global>

profile app_profile flags=(audit,attach_disconnected,mediate_deleted) {
	signal (receive) set=(usr2) peer=app_profile,
	signal (send) set=(usr2) peer=app_profile,
	network inet6 dgram,
	capability fsetid,
	capability chown,
	/tmp/#sql_1_0.MAD r,
	signal (receive) set=(usr1) peer=db_profile,
	signal (receive) set=(exists) peer=unconfined,
	/tmp/#sql_1_0.MAI d,
	/etc/ld.so.cache r,
	signal (send) set=(hup) peer=app_profile,
	/tmp/#sql_1_0.MAI r,
	/tmp/#sql_1_0.MAD d,
	mount /home/ubuntu/SecureWilly/next/data -> /var/www/html/data, #Bind host volume to docker container volume
	/usr/src/nextcloud/core/doc/admin/_images/encryption1.png r,
	signal (send) set=(usr1) peer=db_profile,
	network inet stream,
	/var/lib/docker/* r, #Access to layers of filesystem
	network inet6 stream,
	/usr/src/nextcloud/core/doc/admin/_images/enable-app.png r,
	capability fowner,
	capability setgid,
	signal (receive) set=(hup) peer=app_profile,
	capability dac_override,
	/lib/x86_64-linux-gnu/libtinfo.so.5.9 r,
	deny umount /var/www/html, #Disallow anybody that wants to break this mountpoint
	mount nextcloud -> /var/www/html, #Bind host volume to docker container volume
	file,  #This rule is needed so that I can work with files (create files/directories, copy, etc)
	deny remount /var/www/html/data, #Disallow anybody that wants to remount this mountpoint
	network inet dgram,
	capability setuid,
	deny remount /var/www/html, #Disallow anybody that wants to remount this mountpoint
	deny ptrace (readby, tracedby), #Confront container breakout attacks
	/lib/x86_64-linux-gnu/libcrypt-2.24.so r,
	signal (receive) set=(term) peer=db_profile,
	capability net_bind_service,  #This capability is needed to bind a socket to Internet domain privileged ports
	signal (receive) set=(kill) peer=unconfined,
	/usr/src/nextcloud/core/doc/admin/_images/dropbox-oc.png r,
	deny umount /var/www/html/data, #Disallow anybody that wants to break this mountpoint
	signal (send) set=(term) peer=db_profile,
}
