#include <tunables/global>

profile nextcloud_profile flags=(audit,attach_disconnected,mediate_deleted) {
	/usr/src/nextcloud/apps/files_texteditor/css/DroidSansMono/DroidSansMono-webfont.eot r,
	/var/www/html/data/* rw,
	/tmp/.ZendSem.dsW4E2 wk,
	mount /var/lib/docker/volumes/nextcloudexample_nextcloud_/_data -> /var/www/html, #Bind host volume to docker container volume
	capability fsetid,
	capability chown,
	/usr/src/nextcloud/apps/gallery/lib/Config/ConfigParser.php r,
	/lib/x86_64-linux-gnu/libcrypt-2.24.so r,
	network inet6 dgram,
	signal (receive) set=(exists) peer=unconfined,
	/etc/ld.so.cache r,
	deny ptrace (readby, tracedby), #Confront container breakout attacks
	mount /var/lib/docker/volumes/nextcloudexample_db_/_data -> /var/lib/mysql, #Bind host volume to docker container volume
	/usr/src/nextcloud/apps/files_videoplayer/js/videojs/video-js.css r,
	network inet stream,
	/var/www/html/* rw,
	/var/lib/docker/* r, #Access to layers of filesystem
	network inet6 stream,
	capability fowner,
	capability setgid,
	signal (receive) set=(usr2) peer=nextcloud_profile,
	capability dac_override,
	deny umount /var/www/html, #Disallow anybody that wants to break this mountpoint
	/tmp/.ZendSem.cLBkX9 wk,
	signal (receive) set=(kill) peer=unconfined,
	/tmp/.ZendSem.tuh372 wk,
	/tmp/.ZendSem.aUum6T k,
	file,  #This rule is needed so that I can work with files (create files/directories, copy, etc)
	deny remount /var/www/html/data, #Disallow anybody that wants to remount this mountpoint
	network inet dgram,
	/tmp/.ZendSem.aUum6T wk,
	capability setuid,
	deny remount /var/www/html, #Disallow anybody that wants to remount this mountpoint
	/tmp/.ZendSem.YwYfqE k,
	mount /home/ubuntu/SecureWilly/nextcloud_example/data -> /var/www/html/data, #Bind host volume to docker container volume
	/var/lib/mysql/* rw,
	/tmp/.ZendSem.EIzmki k,
	/usr/src/nextcloud/apps/firstrunwizard/l10n/it.json r,
	deny umount /var/lib/mysql, #Disallow anybody that wants to break this mountpoint
	/tmp/.ZendSem.EIzmki wk,
	/usr/src/nextcloud/apps/gallery/lib/Config/ConfigValidator.php r,
	signal (send) set=(usr2) peer=nextcloud_profile,
	deny remount /var/lib/mysql, #Disallow anybody that wants to remount this mountpoint
	/tmp/.ZendSem.YwYfqE wk,
	deny umount /var/www/html/data, #Disallow anybody that wants to break this mountpoint
	capability net_bind_service,  #This capability is needed to bind a socket to Internet domain privileged ports
}
