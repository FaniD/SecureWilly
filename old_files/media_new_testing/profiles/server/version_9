#include <tunables/global>

profile server_profile flags=(audit,attach_disconnected,mediate_deleted) {
	dac_overridecapname net_bind_serviwe,
	capability dac_override,
	capability net_bind_service,
	chowncapname ,
	capability chown,
	network inet stream,
	file,  #This rule is needed so that I can work with files (create files/directories, copy, etc)
	network inet6 stream,
	dac_overridecapname daw_overridewapname,
	signal (receive) set=(term) peer=unconfined,
}
