#include <tunables/global>

profile test_profile flags=(attach_disconnected,mediate_deleted) {

	deny remount b, #Disallow anybody that wants to remount this mountpoint
	set rlimit nofile <= 1024,
	network,  #Grain access to networking - ports forwarding

	/var/lib/docker/* r, #Access to layers of filesystem
	deny umount b, #Disallow anybody that wants to break this mountpoint
	deny capability chown,
	file,  #This rule is needed so that I can work with files (create files/directories, copy, etc)
	mount a -> b, #Bind host volume to docker container volume
	capability sys_chroot,
	capability net_bind_service,  #This capability is needed to bind a socket to Internet domain privileged ports
	deny ptrace (readby, tracedby), #Confront container breakout attacks
}
